<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="personal information form"
        android:textColor="#0930BA"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="คำนำหน้า :"
        android:textColor="#0019A6"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/frontRadio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/frontRadio2"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ด.ช"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/frontRadio1"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ด.ญ"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/frontRadio4"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="นาย"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/frontRadio3"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="น.ส"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/frontRadio5"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="นาง"
                android:textSize="14sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ชื่อ :"
            android:textColor="#0019A6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ใส่ชื่อ"
            android:inputType="text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="นามสกุล :"
            android:textColor="#0019A6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lastnameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ใส่นามสกุล"
            android:inputType="text"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="เพศ :"
            android:textColor="#0019A6"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/ageRadio"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/boyRadio"
                android:layout_width="163dp"
                android:layout_height="25dp"
                android:text="ชาย" />

            <RadioButton
                android:id="@+id/girlRadio"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:text="หญิง" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="69dp"
            android:layout_height="34dp"
            android:text="อายุ :"
            android:textColor="#0019A6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ageText"
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="number"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="วันเกิด :"
            android:textColor="#0019A6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dayText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="วันที่"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/monthText"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="เดือน"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/yearText"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ปี"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="งานอดิเรก"
            android:textColor="#0019A6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:text="วาดรูป"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="ฟังเพลง"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:text="ทำอาหาร"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="เล่นเกม"
                android:textSize="14sp" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOK"
            android:layout_width="77dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:text="ยืนยัน"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:background="#EDEDED"
        android:textSize="20sp" />
</LinearLayout>